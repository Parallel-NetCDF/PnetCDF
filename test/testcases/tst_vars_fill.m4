        CHECK_ERR
    }

    for (k=0; k<NVARS; k++) {
        /* write strided subarray */
        stride[0] = 2+k;  stride[1] = 2+k;
         start[0] = 0;   start[1] = rank*NX;
         count[0] = NY/stride[0];  count[1] = NX/stride[1];
        if (NY % stride[0]) count[0]++;
        if (NX % stride[1]) count[1]++;
        for (i=0; i<NY; i++) for (j=0; j<NX; j++) buf[i][j] = ($1)rank;
